<?xml version="1.0" encoding="utf-8"?>
<com.fragdance.myflixclient.MainView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#080808"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        >

    </androidx.fragment.app.FragmentContainerView>

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:textSize="24sp" />
    <fragment
        android:id="@+id/loading_progress"
        android:name="com.fragdance.myflixclient.components.loading_progress.LoadingProgress"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="#ff0000" />
    <fragment
        android:id="@+id/side_menu"
        android:name="com.fragdance.myflixclient.components.side_menu.SideMenu"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="#ff0000" />


</com.fragdance.myflixclient.MainView>